job "chat" {
  datacenters = ["$DATACENTER"]

  type = "service"

  update {
    max_parallel = 1
    stagger = "10s"
  }

  group "chat-web" {
    count = 3

    restart {
      mode = "delay"
      attempts = 3
      interval = "30s"
      delay = "10s"
    }

    task "chat-web" {
      driver = "docker"

      shutdown_delay = "10s"

      env {
        SIMPLE_SETTINGS = "chat.settings.production"
        COMMAND_NAME = "serve"
      }

      config {
        image = "docker-infra.cian.ru/chat:$IMAGE_TAG"

        port_map {
          http = 80
        }

        auth {
          username = "$DOCKER_REGISTRY_USERNAME"
          password = "$DOCKER_REGISTRY_PASSWORD"
        }
      }

      service {
        port = "http"
        name = "chat"
        tags = ["micro.cian.tech", "production"]

        check {
          type = "http"
          path = "/ping/"
          interval = "5s"
          timeout = "2s"
        }
      }

      resources {
        cpu = 2048
        memory = 512

        network {
          mbits = 1

          port "http" {
          }
        }
      }
    }
  }
}
